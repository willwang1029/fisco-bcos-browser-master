---
test:
  name: helloword
  description: This is an example benchmark for caliper, to test the backend DLT's
    performance with simple account opening & querying transactions
  clients:
    type: local
    number: 2
  rounds:
  - label: open-liner//名称
    txDuration:
    - 3//持续时间
    rateControl:
    - type: fixed-rate
      opts:
        tps: 1//发送速率
    arguments:
      money: 10000
    callback: benchmark/fisco-bcos/v2.0/helloworld/open.js//脚本地址
  - label: query
    txDuration:
    - 3
    rateControl:
    - type: fixed-rate
      opts:
        tps: 10
    callback: benchmark/fisco-bcos/v2.0/helloworld/query.js
monitor:
  type:
  - process
  docker:
    name:
    - all
  process:
  - command: node
    arguments: local-client.js
    multiOutput: avg
  interval: 1